  <div class="user-box">
    {% if app.session.usuario_foto %}
      <img src="/laressencia/public/{{ app.session.usuario_foto }}" alt="Avatar" class="avatar-img">
    {% else %}
      <img src="{{ base_url }}/assets/img/avatar-default.png" alt="Avatar" class="avatar-img">
    {% endif %}

    <div class="user-info">
      <strong>{{ app.session.usuario_nome }}</strong><br>
      <small>{{ app.session.usuario_email }}</small>
    </div>
  </div>
