    <button id="menu-toggle" class="menu-btn">☰</button>
  </div>

   <nav>
    <ul>
      <li><a href="{{ base_url() }}/admin/dashboard"><i data-lucide="layout-dashboard"></i> Dashboard</a></li>
      <li><a href="/laressencia/public/admin/produto/listar"><i data-lucide="package"></i> Produtos</a></li>
      <li><a href="{{ base_url }}/admin/pedidos/listar"><i data-lucide="shopping-cart"></i> Pedidos</a></li>
      <li><a href="{{ base_url }}/admin/clientes/listar"><i data-lucide="users"></i> Clientes</a></li>
      <li><a href="{{ base_url }}/admin/categorias/listar"><i data-lucide="folder"></i> Categorias</a></li>
      <li><a href="{{ base_url }}/admin/banners/listar"><i data-lucide="megaphone"></i> Banners</a></li>
