{% extends 'admin/layout/base.twig' %}

{% block title %}➕ Nova Publicidade{% endblock %}

{% block content %}
<h1 class="titulo-pagina"><i class="lucide lucide-plus"></i> Nova Publicidade</h1>

<form action="index.php?url=publicidade/salvar" method="POST" enctype="multipart/form-data" class="formulario">
  <div class="form-group">
    <label for="titulo">Título</label>
    <input type="text" id="titulo" name="titulo" required>
  </div>

  <div class="form-group">
    <label for="link">Link de Destino</label>
    <input type="text" id="link" name="link" placeholder="https://...">
  </div>

  <div class="form-group">
    <label for="pagina">Página de Exibição</label>
    <select id="pagina" name="pagina">
      <option value="home">Home</option>
      <option value="produtos">Produtos</option>
      <option value="categorias">Categorias</option>
      <option value="sobre">Sobre</option>
      <option value="contato">Contato</option>
    </select>
  </div>

  <div class="form-group">
    <label for="imagem">Imagem</label>
    <input type="file" id="imagem" name="imagem" accept="image/*" required>
  </div>

  <div class="form-group switch-group">
    <label for="ativo">Ativo</label>
    <input type="checkbox" id="ativo" name="ativo" value="1" checked>
  </div>

  <div class="form-actions">
    <button type="submit" class="button"><i class="lucide lucide-save"></i> Cadastrar Publicidade</button>
  </div>
</form>
{% endblock %}