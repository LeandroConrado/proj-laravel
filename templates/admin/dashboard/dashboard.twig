          fill: true,
          tension: 0.3,
          yAxisID: 'y2'
        }
      ]
    },
    options: {
      responsive: true,
      interaction: {
        mode: 'index',
        intersect: false
      },
      stacked: false,
      scales: {
        y1: {
          type: 'linear',
          position: 'left',
          title: {
            display: true,
            text: 'Quantidade'
          },
          beginAtZero: true
        },
        y2: {
          type: 'linear',
          position: 'right',
          title: {
